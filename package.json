{
  "name": "@pooltogether/pooltogether-contracts-mock",
  "version": "0.2.5",
  "description": "Easily stand up PoolTogether on a local Ganache instance",
  "main": "index.js",
  "homepage": "https://github.com/pooltogether/pooltogether-contracts-mock",
  "repository": "git@github.com:pooltogether/pooltogether-contracts-mock.git",
  "license": "GPL-3.0",
  "author": "Brendan Asselstine brendan@pooltogether.us",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "truffle test --migrations_directory ./migrations/empty",
    "start": "./scripts/ganache.sh",
    "compile": "truffle compile",
    "accrue": "./scripts/accrue.js",
    "reset": "rm .oz-migrate/local; rm .openzeppelin/dev-1234.json; rm -rf build",
    "version": "truffle version",
    "push": "oz push",
    "console": "oz-console --network http://localhost:8545 -m \"$HDWALLET_MNEMONIC\"",
    "migrate": "./scripts/migrate.js",
    "session": "oz session --from $ADMIN_ADDRESS --network local --expires 7200 --timeout 3600",
    "update-all": "oz update --all --from $ADMIN_ADDRESS",
    "push-and-update": "yarn push && yarn update-all",
    "push-rinkeby": "oz push --network rinkeby",
    "console-rinkeby": "oz-console --network rinkeby -m \"$HDWALLET_MNEMONIC\"",
    "migrate-rinkeby": "./scripts/migrate.js -r",
    "session-rinkeby": "oz session --from $ADMIN_ADDRESS --network rinkeby --expires 7200 --timeout 3600",
    "update-all-rinkeby": "oz update --all --network rinkeby --from $ADMIN_ADDRESS",
    "push-and-update-rinkeby": "yarn push-rinkeby && yarn update-all-rinkeby",
    "push-kovan": "oz push --network kovan",
    "console-kovan": "oz-console --network kovan -m \"$HDWALLET_MNEMONIC\"",
    "migrate-kovan": "./scripts/migrate.js -k",
    "session-kovan": "oz session --from $ADMIN_ADDRESS --network kovan --expires 7200 --timeout 3600",
    "update-all-kovan": "oz update --all --network kovan --from $ADMIN_ADDRESS",
    "push-and-update-kovan": "yarn push-kovan && yarn update-all-kovan",
    "prepack": "rm -rf build && oz compile",
    "postpublish" : "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
  },
  "dependencies": {
    "@openzeppelin/cli": "2.6.0",
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "eth-gas-reporter": "0.2.0",
    "ganache-cli": "6.5.0",
    "oz-console": "^1.1.3",
    "oz-migrate": "^0.2.4",
    "@pooltogether/pooltogether-contracts": "pooltogether/pooltogether-contracts#master",
    "@pooltogether/pods": "0.3.2",
    "shelljs": "0.8.3",
    "truffle": "5.0.28",
    "truffle-deploy-registry": "0.5.0",
    "truffle-hdwallet-provider": "1.0.0-web3one.5",
    "zos-truffle-merge": "0.0.3"
  },
  "devDependencies": {
    "solc": "0.5.10",
    "solidity-coverage": "0.6.4"
  }
}
